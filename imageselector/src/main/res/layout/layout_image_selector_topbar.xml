<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_image_selector_title"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="?colorPrimary"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:gravity="center_vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/iv_image_selector_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:padding="12dp" />

    <TextView
        android:id="@+id/tv_image_selector_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:drawablePadding="2dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxEms="11"
        android:padding="6dp"
        android:text="相机胶卷"
        android:textSize="17sp" />

    <RelativeLayout
        android:id="@+id/layout_image_selector_state"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="14dp">

        <ImageView
            android:id="@+id/iv_image_selector_state"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_image_selector_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="完成"
        android:textSize="14sp"
        android:visibility="gone" />
</RelativeLayout>